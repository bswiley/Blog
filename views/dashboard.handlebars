{{#each posts as |post|}}
<aside>
      <h2>{{post.user.username}}'s Dashboard</h2>
</aside>
<div class="blogpost-div">
  <!--Is our Menu for selection here? -->
      <div class="card">
          
          <h3>
            <span class="card-title">{{post.title}}</span> 
            <span class ="card-id">{{post.id}}</span>
            </h3>
          <h4 class="card-body"></p>
          <p class="card-text">
              {{post.text}}
          </h4>
           <div class="button-container">
    <a href="/post/{{post.id}}" class="view">View Comments</a>
    <button class="update">Update</button>
    <button class="delete">Delete</button>
  </div>
      </div>
  {{/each}}
</div>
<script src="/js/dashboard.js"></script>